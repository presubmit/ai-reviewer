# Copy this file to .env and set the variables
# The variables are only used when running locally

# REQUIRED: Set this as your Github personal access token
GITHUB_TOKEN=

# OPTIONAL: GitHub Enterprise Server configuration
# API URL for GitHub Enterprise Server
# GITHUB_API_URL=https://github.example.com/api/v3
# Server URL for GitHub Enterprise Server
# GITHUB_SERVER_URL=https://github.example.com

# REQUIRED: LLM API
# API key from your LLM provider (ie Anthropic, Google, OpenAI)
LLM_API_KEY=
# Model name from your LLM provider (ie claude-3-5-sonnet-20241022, gemini-1.5-flash-latest, gpt-4o-mini)
LLM_MODEL=
# LLM provider (e.g. ai-sdk, sap-ai-sdk)
LLM_PROVIDER=

# OPTIONAL: Custom base URL for OpenAI-compatible providers (only for LLM_PROVIDER=ai-sdk)
# Base URL for OpenAI-compatible providers (e.g. https://openrouter.ai/api/v1)
# LLM_BASE_URL=

# SAP AI Core Configuration (required when LLM_PROVIDER=sap-ai-sdk)
# Base URL for SAP AI Core API
SAP_AI_CORE_BASE_URL=
# Client ID for SAP AI Core
SAP_AI_CORE_CLIENT_ID=
# Client Secret for SAP AI Core
SAP_AI_CORE_CLIENT_SECRET=
# Token URL for SAP AI Core authentication
SAP_AI_CORE_TOKEN_URL=
# Resource group for SAP AI Core (default: default)
SAP_AI_RESOURCE_GROUP=default

# OPTIONAL: Local development and testing
# Enable debug mode to load PR data from environment variables
# DEBUG=1
# Enable dry-run mode to skip GitHub API writes and log what would be posted
# DRY_RUN=1

# Simulate a Pull Request open event (used when DEBUG=1 or running with pnpm dev)
GITHUB_ACTION=ai-reviewer
# update with your comment id
GITHUB_COMMENT_ID=1111111
GITHUB_EVENT_ACTION=created
GITHUB_EVENT_NAME=pull_request
# update with your pull request number
GITHUB_PULL_REQUEST=1
# update with your fork
GITHUB_REPOSITORY=presubmit/ai-reviewer

# Simulate a Pull Request review comment event
# GITHUB_ACTION=ai-reviewer
# GITHUB_COMMENT_ID=1111111
# GITHUB_EVENT_ACTION=created
# GITHUB_EVENT_NAME=pull_request_review_comment
