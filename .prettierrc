{
  "$schema": "http://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,

  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",

  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",

  "endOfLine": "lf",

  "proseWrap": "preserve",

  "overrides": [
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "singleQuote": true
      }
    }
  ]
}
